<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.douwenxuan.view.main.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/comment_text"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:background="@color/comment_text"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="点击登录"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:src="@mipmap/arrows_circle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/order_47"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="我的订单" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/sale_coupon_70"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="优惠券" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/gift_box_48"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="礼品卡" />
        </LinearLayout>

        <include layout="@layout/layout_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/geolocalize_44"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="我的收藏" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_drawer_like"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="我的足迹" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_drawer_wechat"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="会员福利" />
        </LinearLayout>

        <include layout="@layout/layout_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/geolocalize_44"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="地址管理" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_drawer_about"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="账号安全" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_drawer_wechat"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="联系客服" />
        </LinearLayout>

        <include layout="@layout/layout_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/help_64"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="帮助中心" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_drawer_zhihu"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="意见反馈" />

            <include layout="@layout/layout_vertical_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
